<ul class="navbar-nav flex-grow-1">
    @if (User.Identity?.IsAuthenticated == true)
    {
        if (Model)
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-controller="Projects" asp-action="Index">Projects</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-controller="ProjectTypes" asp-action="Index">Project Types</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-controller="Skills" asp-action="Index">Skills</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-controller="Home" asp-action="UserActivities">User Activities</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-controller="Logs" asp-action="Index">System Logs</a>
