<ul class="navbar-nav">
    @if (User.Identity?.IsAuthenticated == true)
    {
        @if (Model)
        {
            <li class="nav-item d-flex align-items-center">
                <span class="badge bg-danger me-2">Administrator</span>
            </li>
        }
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="User" asp-action="Profile">Profile</a>
        </li>
        <li class="nav-item">
            <form asp-controller="User" asp-action="Logout" method="post" id="logoutForm">
                <button type="submit" class="btn btn-link nav-link text-dark">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="User" asp-action="Login">Login</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="User" asp-action="Register">Register</a>
        </li>
    }
